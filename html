            <div class="detalhe-valor">${ultimaEtapaCorrigido}</div>
        </div>

        <div class="detalhe-item" style="grid-column: 1 / -1; background: #f0f0f8; border-left: 4px solid #6f42c1; margin-top: 10px;">
